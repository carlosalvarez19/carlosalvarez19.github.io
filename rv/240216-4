<script src="three.min.js"></script>
<script>
  var escena=new THREE.Scene();
  var fov = 75; // Campo de vision
  var aspect=window.innerWidth/window.innerHeight; //relacion de aspecto
  var near=0.1;// plno cercano
  var far =1000;// plano lejano
  var camara = new THREE.PerspectiveCamera(fov, aspect, near, far );
  
  camara.position.z=100;
  
  var renderer=new THREE.WebGLRenderer();
  renderer.setSize(window.innerWidth,window.innerHeight);
  document.body.appendChild(renderer.domElement);
  
  
var figura = new THREE.Shape();

//la figura se realiza sobre el plano xy

figura.moveTo(0,10);
figura.lineTo(10,10);
figura.lineTo(15,0);
figura.lineTo(20,10);
figura.lineTo(30,10);
figura.lineTo(25,20);
figura.lineTo(30,30);
figura.lineTo(15,25);
figura.lineTo(0,30);
figura.lineTo(5,20);
figura.lineTo(0,10);

//para generar la malla hay que desarrollar la forma 

var forma = new TRHEE.ShaoeGeometry(figura);
var malla = new TRHEE.Mesh(forma);

escena.add(malla);

  function render(){
    requestAnimationFrame(render);
    
    toroide.rotation.x +=0.1;
    toroide.rotation.y +=0.1;
    renderer.render(escena,camara);
  }
  render();
  
</script>
</body>
